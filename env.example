# StoryHub Environment Variables Template
# Copy this file to .env and fill in your values

# Application
NODE_ENV=development
PORT=3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://username:password@localhost:5432/storyhub
DB_HOST=localhost
DB_PORT=5432
DB_NAME=storyhub
DB_USER=your_username
DB_PASSWORD=your_password

# Authentication (JWT)
JWT_SECRET=your-secret-key-change-this-in-production
JWT_EXPIRATION=24h

# Stellar Integration
STELLAR_API_URL=https://stellar.cnn.com/api
STELLAR_API_KEY=your-stellar-api-key

# File Upload
MAX_FILE_SIZE=10485760
UPLOAD_DIR=./uploads

# Real-time (WebSocket)
WS_PORT=3001

# Logging
LOG_LEVEL=info

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Optional: Redis (for caching/sessions)
# REDIS_URL=redis://localhost:6379
